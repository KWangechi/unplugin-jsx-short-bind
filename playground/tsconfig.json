{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": true,
    "jsxImportSource": "vue",
    "customConditions": ["dev"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["unplugin-vue-macros/macros-global"]
  },
  "vueCompilerOptions": {
    "plugins": [
      "@vue-macros/volar/export-render", 
      "unplugin-jsx-short-bind/volar"
    ]
  }
}
